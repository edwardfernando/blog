<%= form_for @user, :url => kaskus_new_websites_path do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2> 
			<ul>
				<% @user.errors.full_messages.each do |msg| %> 
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :kaskus_id %>
	<%= f.text_field :kaskus_id %>
	<%= f.submit "Save" %>
<% end %>

<% if !@user.kaskus_auth_token.blank? %>

	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Your Kaskus Token</h3>
	  </div>
	  <div class="panel-body">
	    <%= @user.kaskus_auth_token %>
	  </div>
	</div>
	<div>
		<%= link_to "Verify account" %>
	</div>
<% end %>




